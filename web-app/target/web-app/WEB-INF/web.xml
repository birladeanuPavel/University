<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>

    <servlet>
        <servlet-name>AddDepartmentServlet</servlet-name>
        <servlet-class>com.pavel.servlet.AddDepartmentServlet</servlet-class>

    </servlet>
    <servlet>
        <servlet-name>EditDepartmentServlet</servlet-name>
        <servlet-class>com.pavel.servlet.EditDepartmentServlet</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>RemoveDepartmentServlet </servlet-name>
        <servlet-class>com.pavel.servlet.RemoveDepartmentServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AddDepartmentServlet</servlet-name>
        <url-pattern>/ServletPath</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>EditDepartmentServlet</servlet-name>
        <url-pattern>/EditDepartmentServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RemoveDepartmentServlet</servlet-name>
        <url-pattern>/RemoveDepartmentServlet</url-pattern>
    </servlet-mapping>
    
    
    
    

</web-app>
